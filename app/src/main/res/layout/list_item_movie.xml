<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/baseCard"
        android:layout_width="400dp"
        android:layout_height="220dp"
        android:background="@color/white"
        android:outlineAmbientShadowColor="@color/sea_blue"
        android:outlineSpotShadowColor="@color/sea_blue"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/IvCard"
        android:layout_width="110dp"
        android:layout_height="160dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="60dp"
        app:cardElevation="20dp"
        android:background="@color/white"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="@id/baseCard"
        app:layout_constraintStart_toStartOf="@id/baseCard">
        <ImageView
            android:id="@+id/IvMovie"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/tvMovieName"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:elevation="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:fontFamily="@font/droid_bold"
        android:text="asfasfsafasfasfasf"
        app:layout_constraintTop_toTopOf="@id/IvCard"
        android:paddingVertical="50dp"
        android:paddingLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/IvCard"
        android:textColor="@color/servet"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/tvOverView"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="40dp"
        android:elevation="20dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:fontFamily="@font/patela"
        android:text="asknfkjasbfkjsabfjkasbfjkasbfkjasbfkjasbf"
        app:layout_constraintTop_toTopOf="@id/IvCard"
        android:paddingVertical="50dp"
        android:paddingLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/IvCard"
        android:textColor="@color/beta"
        android:textSize="13sp" />

    <ImageView

        android:layout_width="20dp"
        android:layout_height="20dp"
        android:elevation="20dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvMovieName"
        android:src="@drawable/ic_star_list"
        app:layout_constraintStart_toEndOf="@id/IvCard"
        >

    </ImageView>
    <TextView
        android:id="@+id/TvVoteText"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:elevation="20dp"
        android:text="aklfmklaf"
        android:textAlignment="center"
        android:fontFamily="@font/patela"
        android:textColor="@color/beta"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvMovieName"
        android:src="@drawable/ic_star_list"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/IvCard"
        >

    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>


