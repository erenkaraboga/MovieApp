<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/luna"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/IvBack"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        app:cardBackgroundColor="@color/star_orange"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_back">

        </ImageView>
    </com.google.android.material.card.MaterialCardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/luna"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="230dp"
                    android:layout_height="345dp"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/IvPoster"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/luna"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    android:paddingStart="20dp"
                    tools:ignore="RtlSymmetry">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:outlineAmbientShadowColor="@color/sea_blue"
                        android:outlineSpotShadowColor="@color/sea_blue"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="7dp">

                        <LinearLayout
                            android:id="@+id/deneme"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingTop="20dp"
                                android:src="@drawable/ic_language">

                            </ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/droid_bold"
                                android:text="@string/language"
                                android:textAlignment="center"
                                android:textColor="@color/servet" />

                            <TextView
                                android:id="@+id/TvGenre"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/feral_bold"
                                android:textAlignment="center"
                                android:textColor="@color/servet">

                            </TextView>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/IvDuration"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="20dp"
                        android:outlineAmbientShadowColor="@color/sea_blue"
                        android:outlineSpotShadowColor="@color/sea_blue"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="7dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingTop="20dp"
                                android:src="@drawable/ic_clock_filled" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/droid_bold"
                                android:text="@string/release"
                                android:textAlignment="center"
                                android:textColor="@color/servet" />

                            <TextView
                                android:id="@+id/TvDuration"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/droid_bold"
                                android:textAlignment="center"
                                android:textColor="@color/servet"
                                android:textSize="12sp">

                            </TextView>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/IvRating"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="20dp"
                        android:outlineAmbientShadowColor="@color/sea_blue"
                        android:outlineSpotShadowColor="@color/sea_blue"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="7dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingTop="20dp"
                                android:src="@drawable/ic_star" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/droid_bold"
                                android:text="@string/rating"
                                android:textAlignment="center"
                                android:textColor="@color/servet" />

                            <TextView
                                android:id="@+id/TvRating"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/droid_bold"
                                android:textAlignment="center"
                                android:textColor="@color/servet">

                            </TextView>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/genreRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/TvMovieName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/droid_bold"
                android:paddingVertical="10dp"
                android:textColor="@color/servet"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TvDescMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/patela"
                android:lineHeight="30dp"
                android:paddingVertical="10dp"
                android:textColor="@color/servet"
                android:textSize="15sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/videosRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" />
        </LinearLayout>

    </ScrollView>


</RelativeLayout>
