<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A2A35"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2A2A35"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#2A2A35"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/posterIv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="20dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="250px"
                        android:layout_height="250px"
                        app:cardCornerRadius="10dp"
                        app:strokeColor="#393942"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#2A2A35"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingTop="40px"
                                android:src="@drawable/ic_language">

                            </ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20px"
                                android:fontFamily="@font/feral_bold"
                                android:text="Language"
                                android:textAlignment="center"
                                android:textColor="#919192"></TextView>

                            <TextView
                                android:id="@+id/genreTv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/feral_bold"
                                android:textAlignment="center"
                                android:textColor="@color/white">

                            </TextView>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/durationIv"
                        android:layout_width="250px"
                        android:layout_height="250px"
                        android:layout_marginTop="150px"
                        app:cardCornerRadius="10dp"
                        app:strokeColor="#393942"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#2A2A35"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingTop="40px"
                                android:src="@drawable/ic_clock_filled"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20px"
                                android:fontFamily="@font/feral_bold"
                                android:text="Release"
                                android:textAlignment="center"
                                android:textColor="#919192"></TextView>

                            <TextView
                                android:id="@+id/durationTv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/feral_bold"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="12dp">

                            </TextView>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/ratingIv"
                        android:layout_width="250px"
                        android:layout_height="250px"
                        android:layout_marginTop="150px"
                        app:cardCornerRadius="10dp"
                        app:strokeColor="#393942"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#2A2A35"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingTop="40px"
                                android:src="@drawable/ic_star"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20px"
                                android:fontFamily="@font/feral_bold"
                                android:text="Rating"
                                android:textAlignment="center"
                                android:textColor="#919192"></TextView>

                            <TextView
                                android:id="@+id/ratingTv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/feral_bold"
                                android:textAlignment="center"
                                android:textColor="#f59827">

                            </TextView>
                        </LinearLayout>
                        >

                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>


            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/genreRecyclerView"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/movieNameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/feral_bold"
                android:paddingVertical="10dp"
                android:textColor="@color/white"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/movieDescTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/feral_light"
                android:paddingVertical="10dp"
                android:textColor="@color/white"
                android:textSize="20dp"></TextView>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>
