<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/luna"
    android:orientation="vertical"
    tools:context=".presentation.movieList.MovieListFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/droid_bold"
                android:text="@string/welcome"
                android:textColor="@color/servet"
                android:textSize="40sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/IvSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/TvWelcome"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/TvWelcome">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="20dp"
                    android:src="@drawable/ic_search"
                    app:layout_constraintBottom_toTopOf="@+id/TvPopular" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/TvPopular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/droid_bold"
                android:text="@string/popular_movies"
                android:textAlignment="center"
                android:textColor="@color/servet"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TvWelcome" />

            <TextView
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:id="@+id/TvPopularMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/droid_bold"
                android:text="@string/see_more"

                android:textColor="@color/star_orange"
                android:textSize="15sp"
                android:clickable="true"

                app:layout_constraintBottom_toBottomOf="@+id/TvPopular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/TvPopular" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerviewPopular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TvPopular" />

            <TextView
                android:id="@+id/TvTopRated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/droid_bold"
                android:text="@string/top_rated"
                android:textColor="@color/servet"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recyclerviewPopular" />

            <TextView
                android:id="@+id/TvTopRatedMore"
                android:layout_width="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/droid_bold"
                android:text="@string/see_more"
                android:clickable="true"
                android:textColor="@color/star_orange"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/TvTopRated"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/TvTopRated" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerviewTopRated"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TvTopRated" />

            <TextView
                android:id="@+id/TvUpcoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/droid_bold"
                android:text="@string/up_coming"
                android:textColor="@color/servet"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recyclerviewTopRated" />

            <TextView
                android:id="@+id/TvUpComingMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:clickable="true"
                android:fontFamily="@font/droid_bold"
                android:text="@string/see_more"
                android:textColor="@color/star_orange"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/TvUpcoming"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/TvUpcoming" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerviewUpcoming"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TvUpcoming" />


            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>