<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2A2A35"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingHorizontal="20dp"
      >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2A2A35"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView

                android:layout_width="650px"
                android:layout_height="match_parent"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/posterIv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="250px"
                    android:layout_height="250px"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="#393942"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#2A2A35"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="40px"
                            android:src="@drawable/baseline_language_24">

                        </ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20px"
                            android:fontFamily="@font/feral"
                            android:text="Language"
                            android:textAlignment="center"
                            android:textColor="#919192"></TextView>

                        <TextView
                            android:id="@+id/genreTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/feral"
                            android:textAlignment="center"
                            android:textColor="@color/white">

                        </TextView>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/durationIv"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:layout_marginTop="150px"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="#393942"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#2A2A35"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="40px"
                            android:src="@drawable/baseline_access_time_filled_24"></ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20px"
                            android:fontFamily="@font/feral"
                            android:text="Release"
                            android:textAlignment="center"
                            android:textColor="#919192"></TextView>

                        <TextView
                            android:id="@+id/durationTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/feral"
                            android:textAlignment="center"
                            android:textSize="12dp"
                            android:textColor="@color/white">

                        </TextView>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/ratingIv"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:layout_marginTop="150px"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="#393942"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#2A2A35"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="40px"
                            android:src="@drawable/baseline_star_24"></ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20px"
                            android:fontFamily="@font/feral"
                            android:text="Rating"
                            android:textAlignment="center"
                            android:textColor="#919192"></TextView>

                        <TextView
                            android:id="@+id/ratingTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/feral"
                            android:textAlignment="center"
                            android:textColor="#f59827">

                        </TextView>
                    </LinearLayout>
                    >

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/movieNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/feral"
            android:paddingVertical="10dp"
            android:textColor="@color/white"
            android:textSize="20dp"></TextView>
    </LinearLayout>


</RelativeLayout>